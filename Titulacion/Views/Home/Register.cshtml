@{ Layout = null; }
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/style.css" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">    
  </head>
  <body>
      <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" asp-action="index">TutoriaExpress</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#mynavbar"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="mynavbar">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <a class="nav-link active" href="javascript:void(0)">Inicio</a>
              </li>
            </ul>
            <ul class="navbar-nav d-flex">
              <li class="nav-item">
                <a class="nav-link" asp-action="Login" asp-controller="Home"
                  ><i class="bi bi-person-fill"></i> Iniciar Sesion</a>
              </li>
              <li>
                <span class="nav-link">|</span>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Landing"
                  ><i class="bi bi-box-arrow-in-right"></i> Regresar</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <style>
      body {
        background-image: url(/img/Fondo.png);
        background-size: cover;
        backdrop-filter: blur(2px);
      }
      .container {
        opacity: 0.9;
      }
    </style>
    <main>
      <section class="vh-100">
        <div class="container py-5 h-100" >
          <div
            class="row d-flex justify-content-center align-items-center h-100"
          >
            <div class="col-12 col-md-12 col-lg-12 col-xl-12 mt-4">
              <div class="card shadow-2-strong" style="border-radius: 1rem">
                <div class="card-body p-4">
                  <div class="text-center">
                    <img
                      src="~/img/add-group.png"
                      alt="Imagen Principal"
                      class="mb-4"
                      width="125px"
                      height="auto"
                    />
                  </div>                  
                   @if(@ViewBag.Bool){
                      <div class="alert alert-warning alert-dismissible fade show" role="alert">        
                        <i class="bi bi-exclamation-triangle-fill"></i>
                             @ViewBag.TodoFine                                             
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                      </div>
                   }
                  <form
                    asp-action="Register" 
                    asp-controller="Home" 
                    method="post"   
                    class="row"
                  >
@*-----------------------------------------------------------------------------*@
                    <div class="mb-4 col-md-4">
                      <label
                        for="lblUsuario"
                        class="col-form-label col-form-label-lg"
                        >Boleta:</label
                      >
                      <input
                        type="text"
                        name="User"
                        id="lblUsuario"
                        class="form-control form-control-lg"
                        placeholder="Coloca tú Boleta aquí"
                        required
                      />                      
                    </div>
@*-----------------------------------------------------------------------------*@
                    <div class="mb-4 col-md-4">
                      <label
                        for="lblPass"
                        class="col-form-label col-form-label-lg"
                        >Contraseña:</label
                      >
                      <input
                        type="password"
                        name="Pass"
                        id="lblPass"
                        class="form-control form-control-lg"
                        placeholder="Coloca tú Contraseña"
                        required
                      />                      
                    </div>
@*-----------------------------------------------------------------------------*@
                    <div class="mb-4 col-md-4">
                      <label
                        for="lblPass"
                        class="col-form-label col-form-label-lg"
                        >Contraseña:</label
                      >
                      <input
                        type="password"                        
                        id="lblPass2"
                        class="form-control form-control-lg"
                        placeholder="Repite tu Contraseña"
                        required
                      />                      
                    </div>
@*-----------------------------------------------------------------------------*@                    
                    <div class="mb-4 col-md-4">
                      <label
                        for="lblCorreo"
                        class="col-form-label col-form-label-lg"
                        >Correo:</label
                      >
                      <input
                        type="email"
                        name="Correo"
                        id="lblCorreo"
                        placeholder="Coloca tú Correo aquí"
                        class="form-control form-control-lg"
                        required
                      />                      
                    </div>
@*-----------------------------------------------------------------------------*@
                    <div class="mb-4 col-md-4">
                      <label
                        for="lblNombre"
                        class="col-form-label col-form-label-lg"
                        >Nombre:</label
                      >
                      <input
                        type="text"
                        name="Nombre"
                        id="lblNombre"
                        placeholder="Coloca tú Nombre aquí"
                        class="form-control form-control-lg"
                        required
                      />                      
                    </div>
@*-----------------------------------------------------------------------------*@
                    <div class="mb-4 col-md-4">
                      <label
                        for="lblApellidoPat"
                        class="col-form-label col-form-label-lg"
                        >Apellido Paterno:</label
                      >
                      <input
                        type="text"
                        name="ApellidoPat"
                        id="lblApellidoPat"
                        placeholder="Coloca tú Apelido Paterno aquí"
                        class="form-control form-control-lg"
                        required
                      />                      
                    </div>
@*-----------------------------------------------------------------------------*@
                    <div class="mb-4 col-md-6">
                      <label
                        for="lblApellidoMat"
                        class="col-form-label col-form-label-lg"
                        >Apellido Materno:</label
                      >
                      <input
                        type="text"
                        name="ApellidoMat"
                        id="lblApellidoMat"
                        placeholder="Coloca tú Apelido Materno aquí"
                        class="form-control form-control-lg"
                        required
                      />                      
                    </div>
@*-----------------------------------------------------------------------------*@
                    <div class="mb-4 col-md-6">
                      <label
                        for="lblGrupo"
                        class="col-form-label col-form-label-lg"
                        >Grupo:</label
                      >
                      <input
                        type="text"
                        name="Grupo"
                        id="lblGrupo"
                        placeholder="Coloca tú Grupo aquí"
                        class="form-control form-control-lg"
                        required
                      />                      
                    </div>
@*-----------------------------------------------------------------------------*@
                    <div class="text-center">
                      <div class="mb-4 mt-4">
                        <a class="col-form-label-lg" asp-action="Login" asp-controller="home"
                          >Click Aquí para Iniciar Sesión</a>
                      </div>
                      <button
                        class="btn btn-primary btn-lg btn-block form-control"
                        onclick="modal()"
                        type="submit"                        
                      >
                        Registrarse
                      </button>                      
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  </body>
</html>
